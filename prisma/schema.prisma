generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  passwordHash String
  role         String
  createdAt    DateTime  @default(now())

  auctions     Auction[] @relation("BuyerAuctions")
  bids         Bid[]
}

model Auction {
  id            Int       @id @default(autoincrement())
  buyerId       Int
  title         String
  decrementStep Float     @default(1.0)
  durationMins  Int       @default(10)
  startPrice    Float
  startTime     DateTime?
  endTime       DateTime?
  status        String    @default("SCHEDULED")
  createdAt     DateTime  @default(now())

  buyer         User      @relation("BuyerAuctions", fields: [buyerId], references: [id])
  items         Item[]
}

model Item {
  id          Int       @id @default(autoincrement())
  auctionId   Int
  description String
  quantity    Float     @default(1.0)
  uom         String    @default("NOS")

  auction     Auction   @relation(fields: [auctionId], references: [id])
  bids        Bid[]
}

model Bid {
  id          Int       @id @default(autoincrement())
  itemId      Int
  supplierId  Int
  bidValue    Float
  bidTime     DateTime  @default(now())

  item        Item      @relation(fields: [itemId], references: [id])
  supplier    User      @relation(fields: [supplierId], references: [id])
}
