{
  "compilerOptions": {
    /* === Basic Configuration === */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* === Path Alias Support === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* === TypeScript Strictness (you can toggle) === */
    "noImplicitAny": false,  // ðŸ‘ˆ Set to false to prevent implicit 'any' build errors
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/types/**/*"
  ],

  "exclude": ["node_modules"]
}
